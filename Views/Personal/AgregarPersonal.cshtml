@model Personal
@{
    ViewData["Title"] = "AgregarPersonal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AgregarPersonal</h2>


<div class="row" style="width:100%">
    <div class="col-6">
        <h2 class="text-primary">Agregar nuevo personal</h2>
        <div class="col-4 text-right">
            <button type="button" class="btn btn-info form-control" data-toggle="modal" data-target="#MiModal">Agregar nuevo personal</button>
        </div>

    </div>
</div>

<!--Tabla -->
<div class="p-4 border rounded bg-light">
    <table id="TblDatosPersonal" class="table table-bordered table-responsive-xl" style="width: 95%">
        <thead class="thead-dark">
            <tr class="table-info">
                <td>Id personal</td>
                <td>Nombre</td>
                <td>Primer apellido</td>
                <td>Segundo apellido</td>
                <td>Dirección personal</td>
                <td>Teléfono personal</td>
                <td>Correo personal</td>
            </tr>
        </thead>
    </table>

</div>

@*Crear la ventana modal*@
<div class="modal fade" id="MiModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class=" modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Agregar personal</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%; padding-bottom:30px;">
                        <div class="row p-3 border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="form-row" style="padding-top:14px;">
                            <div class="form-group col-md-6">
                                <label>Nombre personal</label>
                                <input type="date" asp-for="Nombre" class="form-control" placeholder="Nombre personal" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <!--Nombre del personal-->
                            <div class="form-group col-md-6">
                                <label>Primer apellido</label>
                                <input asp-for="PrimerApellido" class="form-control" placeholder="Primer apellido" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                            </div>

                            <!--Segundo apellido-->
                            <div class="form-group col-md-6">
                                <label>Stock inicial</label>
                                <input type="number" asp-for="SegundoApellido" class="form-control" placeholder="Segundo apellido" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                            </div>
                            <!--Direccion-->
                            <div class="form-group col-md-6">
                                <label>Dirección del empleado</label>
                                <input asp-for="Direccion" class="form-control" placeholder="Dirección empleado" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <!--Telefono-->
                            <div class="form-group col-md-6">
                                <label>Teléfono del empleado</label>
                                <input asp-for="Telefono" class="form-control" placeholder="Teléfono del empleado" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <!--Email-->
                            <div class="form-group col-md-6">
                                <label>Email empleado</label>
                                <input asp-for="Email" class="form-control" placeholder="Email del empleado" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            @*si llevara otro campo*@
                            @*<div class="form-group col-md-6">
                                    <label>Nombre</label>
                                    <input asp-for="Nombrecategoria" class="form-control" placeholder="Nombres" />
                                    <span asp-validation-for="Nombrecategoria" class="text-danger"></span>

                                </div>*@
                        </div>
                        @*<div class="form-group">
                                <label>Descripcion</label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>*@  @*como la descripcion es mas grande*@


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar Ventana</button>
                        <button type="submit" class="btn btn-success">G uardar Cambios</button>
                    </div>

                </form>
            </div>

        </div>

    </div>

