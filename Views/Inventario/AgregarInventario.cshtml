@model Inventario
@{
    ViewData["Title"] = "AgregarInventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AgregarInventario</h2>

<div class="row" style="width:100%" ;>
    <div class="col-6">
        <h2 class="text-primary">Agregar al inventario</h2>
        <div class="col-4 text-right">
            <button type="button" class="btn btn-info form-control" data-toggle="modal" data-target="#MiModal">Agregar nuevo elemento al inventario</button>
        </div>

    </div>
</div>

<!--Tabla -->
<div class="p-4 border rounded bg-light">
    <table id="TblDatos" class="table table-bordered table-responsive-xl" style="width: 95%">
        <thead class="thead-dark">
            <tr class="table-info">
                <td>Id Inventario</td>
                <td>Fecha de entrada de inventario</td>
                <td>Nombre comercial medicamento</td>
                <td>Stock inicial</td>
                <td>Entrdadas</td>
                <td>Salidas</td>
                <td>Stock actual</td>
                <td>Precio preventa</td>
                <td>Costo preventa</td>
                <td>Id presentacion</td>
                <td>Id laboratorio</td>
                <td>Id compra</td>                
            </tr>
        </thead>
    </table>

</div>

@*Crear la ventana modal*@
<div class="modal fade" id="MiModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class=" modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Agregar elemento al inventario</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%; padding-bottom:30px;">
                        <div class="row p-3 border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="form-row" style="padding-top:14px;">
                            <div class="form-group col-md-6">
                                <label>Fecha de entrada del laboratorio</label>
                                <input type="date" asp-for="FechaEntradaInventario" class="form-control" placeholder="Fecha de entrada del laboratorio" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="FechaEntradaInventario" class="text-danger"></span>
                            </div>
                            <!--Nombre comercial-->
                            <div class="form-group col-md-6">
                                <label>Nombre comercial</label>
                                <input asp-for="NombreComercial" class="form-control" placeholder="Nombre comercial" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="NombreComercial" class="text-danger"></span>
                            </div>

                            <!--Stock inicial-->
                            <div class="form-group col-md-6">
                                <label>Stock inicial</label>
                                <input type="number" asp-for="StockInicial" class="form-control" placeholder="Stock inicial" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="StockInicial" class="text-danger"></span>
                            </div>
                            <!--Entradas-->
                            <div class="form-group col-md-6">
                                <label>Entradas del stock</label>
                                <input asp-for="Entradas" class="form-control" placeholder="Entradas del stock" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Entradas" class="text-danger"></span>
                            </div>
                            <!--Salidas-->
                            <div class="form-group col-md-6">
                                <label>Salidas del stock</label>
                                <input asp-for="Salidas" class="form-control" placeholder="Salidas del stock" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Salidas" class="text-danger"></span>
                            </div>
                            <!--STock actual-->
                            <div class="form-group col-md-6">
                                <label>Stock actual</label>
                                <input asp-for="StockActual" class="form-control" placeholder="STock actual" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="Stock actual" class="text-danger"></span>
                            </div>
                            <!--Precio preventa-->
                            <div class="form-group col-md-6">
                                <label>Precio preventa</label>
                                <input asp-for="PrecioPreventa" class="form-control" placeholder="Precio preventa" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="PrecioPreventa" class="text-danger"></span>
                            </div>
                            <!--Costo preventa-->
                            <div class="form-group col-md-6">
                                <label>Costo preventa</label>
                                <input asp-for="CostoPreventa" class="form-control" placeholder="Costo preventa del emdicamento" /> @*De donde sale todo eso?*@
                                <span asp-validation-for="CostoPreventa" class="text-danger"></span>
                            </div>


